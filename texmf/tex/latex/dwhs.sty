% general math commands
% later to become dwhsmath.sty
\newcommand{\del}{\nabla}
\newcommand\pd[2][]{\ensuremath{\partial^{#1}{#2}\thinspace}} % partial dA
\newcommand\dd[2][]{\ensuremath{\mathrm{d}^{{#1}}{{#2}}
                                 \thinspace}} % differential dA
\newcommand\diffop[2][]{\ensuremath{\frac{\dd[#1]{}}
                                         {\dd{#2^{#1}}}}}  % d/dx
\newcommand\pdiffop[2][]{\ensuremath{\frac{\pd[#1]{}}
                                         {\pd{#2^{#1}}}}}  % d/dx
\def\ddiff#1#2{\frac{\dd{#1}}{\dd{#2}}}
\def\pdiff#1#2{\frac{\pd{#1}}{\pd{#2}}}
\def\magnitude#1{\left|#1\right|} % magnitude of a vector/number
\def\abs#1{\left|#1\right|} % definition of absolute value
\def\expect#1{\left<#1\right>} % expectation value

% these may change according to style preferences, but this keeps semantics
% separate from presentation
\def\vect#1{\mathbf{#1}} % vector
\def\mat#1{\mathbf{#1}} % matrix
\def\conj#1{#1^*} % complex conjugate
\def\adj#1{#1^\dag} % (Hermitian) adjoint
%\def\transpose#1{\ensuremath{\,{}^t\! #1}} % French-style: pre-super t
\def\transpose#1{\ensuremath{ #1^\mathsf{T} }}

\def\units#1{\ensuremath{\;\mathrm{#1}}}
\def\pprime{{\prime\prime}} % double prime
\def\EE#1{\times 10^{#1}}

\def\CHK#1{\ensuremath{\mathcal{C}^\text{HK}_{#1}}}

